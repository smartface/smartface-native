{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"indent": [2, "warn", "space"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["warn", "single"],
		"semi": ["error", "always"],
		"no-unused-vars": "warn"
	}
}
